<div class="content-splash">
</br>
    <div class="row">
      <div id="review2">
      <h5>All Bars</h5>
        <ul id="bar-show">
          <% if @bars.length < 1 %>
            <li>"No results match your criteria"</li>
          <% else %>
            <% @bars.each do |bar| %>
              <li><%= link_to bar.name, bar_path(bar) %></li>
            <% end %>
          <% end %>
        </ul>
        <%= button_to "Add New Bar", new_bar_path, method: :get %>
      </div>
    </div>
  </div>
</div>
<div id="pagination">
<%= paginate @bars %>
</div>
