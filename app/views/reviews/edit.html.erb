<div class="container">
  <div class="column">
    <h1>Edit Review</h1>
    <%= form_for [@bar, @review] do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :body, "Review" %>
        <%= f.text_field :body %>
      </div>

      <div class="field">
        <%= f.label :rating, "Rating" %>
        <%= f.select :rating, options_for_select(1..5) %>
      </div>

      <div class="actions">
        <%= f.submit "Save Changes" %>
      </div>
    <% end %>
  </div>
</div>
